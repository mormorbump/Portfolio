<%= form_with(model: @gym, local: true) do |f| %>

  <%= f.label :ジム名 %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :口コミ %>
  <%= f.text_field :content, class: 'form-control' %>

  <%= f.label :写真 %>
  <% user.pictures.each do |picture| %>
  <%= hidden_field :gym, :avatars, multiple: true, value: picture.identifier %>
<% end %>
  <%= f.file_field :picture, type: :file, multiple: true %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
