<h1><%= @title %></h1>

<div class="container">
<div class="row">
<% @blogs.each do |blog| %>
<div class="col-md-4">
  <div class="blogbox">
    <div class="blogtitle clearfix">
      <%= blog.title %>
    </div>
    <div class="blogbody clearfix">
      <%= blog.body %>
    </div>
    <div class="productCaption clearfix">
      <%= link_to 'Show', blog %>
      <% if logged_in? %>
      <%= link_to 'Edit', edit_blog_path(blog) %>
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: '記事を削除しますか？' } %>
    </div>
    <% end %>
  </div>
  </div>
<% end %>
</div>
<div class="link"><%= link_to '投稿する', new_blog_path %></div>
</div>

<%= will_paginate @blogs, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
